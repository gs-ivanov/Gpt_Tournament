@model IEnumerable<MatchViewModel>

@using static Tournament.WebConstants

<h5 class="text-black-10 text-center text-success"> @TempData[GlobalMessageKey]</h5>

<h2>График на мачовете</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Домакин</th>
            <th>Резултат</th>
            <th>Гост</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
<tr>
    <td>@match.MatchDate.ToShortDateString()</td>
    <td>@match.HomeTeam</td>
    <td>@match.HomeTeamGoals - @match.AwayTeamGoals</td>
    <td>@match.AwayTeam</td>
    <td>
        @if (User.IsAdmin() || User.IsEditor())
        {
<a asp-action="EditMatches" asp-route-id="@match.Id" class="btn btn-warning btn-sm">Редактирай</a>}
    </td>
</tr>
}
    </tbody>
</table>


