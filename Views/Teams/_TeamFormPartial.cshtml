@model TeamFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Черно море..." value="Team " >
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="BMW, Mercedes, etc..." value="City ">
                <span asp-validation-for="City" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trener"></label>
                <input asp-for="Trener" class="form-control" placeholder="BMW, Mercedes, etc..." value="Penev " >
                <span asp-validation-for="Trener" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wins"></label>
                <input asp-for="Wins" class="form-control" value="0">
                <span asp-validation-for="Wins" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Losts"></label>
                <input asp-for="Losts" class="form-control" value="0">
                <span asp-validation-for="Losts" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>
